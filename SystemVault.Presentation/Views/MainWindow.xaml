<Window x:Class="SystemVault.Presentation.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SystemVault.Presentation.Views"
        mc:Ignorable="d"
        Title="System Vault" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Menu x:Name="mnuMain" Grid.Row="0">
            <MenuItem Click="FileMenuItem_Click" Header="Files"></MenuItem>
            <MenuItem Click="CategoriesMenuItem_Click" Header="Categories"></MenuItem>
            <MenuItem x:Name="mniUsers" Click="UsersMenuItem_Click" Header="Users"></MenuItem>
            <MenuItem Click="LogoutMenuItem_Click" Header="Logout"></MenuItem>
        </Menu>

        <Grid x:Name="MainContent" Grid.Row="1"></Grid>
    </Grid>
</Window>
